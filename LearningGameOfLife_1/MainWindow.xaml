<Window x:Class="LearningGameOfLife_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningGameOfLife_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="670" Width="800" WindowStartupLocation="CenterScreen" MinWidth="750" MinHeight="670">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="600"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="600"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="rootGrid" Grid.Row="0" Grid.Column="0" MinWidth="400" Background="#FF999999"/>
        <Grid  Grid.Row="0" Grid.Column="1" MinWidth="400" Background="AliceBlue"/>
        <Grid  Grid.Row="1" Grid.Column="0" MinWidth="400" Background="Aqua"/>
        <Grid  Grid.Row="1" Grid.Column="1" MinWidth="400" Background="Green"/>

        <Label Content="r 0 c 0" Grid.Row="0" Grid.Column="0"/>
        <Label Content="r 0 c 1" Grid.Row="0" Grid.Column="1"/>
        <Label Content="r 1 c 0" Grid.Row="1" Grid.Column="0"/>
        <Label Content="r 1 c 1" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
